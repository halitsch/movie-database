<div class="panel panel-default">
<div class="panel-heading"><h2>Listing genres</h2></div>
<table class="table tablesorter">
  <thead>
    <tr>
      <th>Genre name</th>
      <th>Movies count</th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

