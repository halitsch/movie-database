<div class="panel panel-default">
<div class="panel-heading"><h2>Listing genres</h2></div>
<table class="table tablesorter">
  <thead>
    <tr>
      <th><%= sortable :genre_id %></th>
      <th><%= sortable :name %></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.genre_id %></td>
        <td><%= genre.name %></td>
        <td><%= link_to 'Show', genre %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
        <td><%= link_to 'Delete', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="row"><div class="col-md-4 col-md-offset-5"><%= will_paginate @genres %></div></div>

<br>

<%= link_to 'New Genre', new_genre_path %>
