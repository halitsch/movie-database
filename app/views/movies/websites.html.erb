<div class="panel panel-default">
<div class="panel-heading"><h2>Websites for <%= @movie.title %></h2></div>
<table class="table tablesorter">
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
    </tr>
  </thead>

  <tbody>
    <% @websites.each do |website| %>
      <tr>
        <td><%= website.name %></td>
        <td><%= website.url %></td>
        <td><%= link_to 'Show', website %></td>
        <td><%= link_to 'Edit', edit_movie_path(website) %></td>
        <td><%= link_to 'Destroy', website, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Movie', new_movie_path %>
